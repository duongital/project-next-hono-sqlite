{
  "name": "backend",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/backend/src",
  "projectType": "application",
  "targets": {
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm wrangler dev",
        "cwd": "apps/backend"
      }
    },
    "deploy": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm wrangler deploy",
        "cwd": "apps/backend"
      }
    },
    "db:create": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm wrangler d1 create next-hono-sqlite",
        "cwd": "apps/backend"
      }
    },
    "db:migrate": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm wrangler d1 execute next-hono-sqlite --file=./src/db/schema.sql",
        "cwd": "apps/backend"
      }
    },
    "db:generate": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm drizzle-kit generate",
        "cwd": "apps/backend"
      }
    },
    "db:migrate:local": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm wrangler d1 migrations apply next-hono-sqlite --local",
        "cwd": "apps/backend"
      }
    },
    "db:migrate:prod": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm wrangler d1 migrations apply next-hono-sqlite --remote",
        "cwd": "apps/backend"
      }
    }
  },
  "tags": []
}
